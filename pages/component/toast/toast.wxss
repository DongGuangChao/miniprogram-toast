/* pages/component/toast/toast.wxss */

.toast {
  padding: 3px 13px 4px;
  box-shadow: 0 2px 10px rgba(50, 50, 50, 0.5);
  background: rgba(50, 50, 50, 0.92);
  position: fixed;
  top: 20px;
  right: 12px;
  color: #eee;
  font-size: 13px;
  line-height: 19px;
  border-radius: 2px;
  max-width: 160px;
}

.show {
  animation: show 0.3s ease;
}

@keyframes show {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}
.close{
  animation: close .4s ease;
}

@keyframes close {
  0% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}